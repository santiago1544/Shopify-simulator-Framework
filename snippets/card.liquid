<div class="card">
    <img 
      src="{{ product.image | asset_url }}" 
      alt="{{ product.title }}" 
      class="card__image"
      width="300"
      height="300"
      loading="lazy"
    >
    <h3 class="card__title">{{ product.title }}</h3>
    <p class="card__price">${{ product.price }} USD</p>
</div>
